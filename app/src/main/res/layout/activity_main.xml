<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ezypass.ezypass.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/MainActivitytextViewResult"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/back"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/MainActivityeditTextAppName" />

    <ImageButton
        android:id="@+id/MainActivityimageButtonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:elevation="0dp"
        app:srcCompat="@drawable/ic_show_settings"
        app:layout_constraintLeft_toRightOf="@+id/MainActivitytextViewResult"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/MainActivityimageButtonGenerate" />

    <ListView
        android:id="@+id/MainActivitylistViewShortcuts"
        android:layout_width="390dp"
        android:layout_height="0dp"
        android:layout_below="@+id/MainActivitytextViewShortcuts"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="-1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/MainActivitytextViewResult" />

    <EditText
        android:id="@+id/MainActivityeditTextAppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Application / Website name"
        android:inputType="textPersonName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@+id/MainActivityImagebuttonAddShortcut"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageButton
        android:id="@+id/MainActivityImagebuttonAddShortcut"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add_shortcut"
        app:layout_constraintRight_toLeftOf="@+id/MainActivityimageButtonGenerate"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp" />

    <ImageButton
        android:id="@+id/MainActivityimageButtonGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@drawable/ic_generate_pass"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp" />

</android.support.constraint.ConstraintLayout>
