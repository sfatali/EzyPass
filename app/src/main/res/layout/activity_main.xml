<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ewypass.ezypass.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/MainActivitybuttonGenerate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/MainActivitytextViewShortcuts"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="Generate"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/MainActivitybuttonAddShortcut"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/MainActivityeditTextAppName"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/MainActivitytextViewPassGenerated"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/MainActivitybuttonAddShortcut"
        android:layout_width="179dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listView"
        android:layout_weight="1"
        android:text="Add Shortcut"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/MainActivityeditTextAppName"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/MainActivitytextViewResult"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/MainActivitytextViewGenerate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MainActivitytextViewShortcuts"
        android:layout_below="@+id/MainActivitybuttonAddShortcut"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_weight="1"
        android:text="Generate pass"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/listView" />

    <TextView
        android:id="@+id/MainActivitytextViewPassGenerated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MainActivitytextViewGenerate"
        android:layout_marginBottom="47dp"
        android:layout_marginLeft="16dp"
        android:layout_toEndOf="@+id/MainActivitytextViewShortcuts"
        android:layout_weight="1"
        android:text="Pass generated : "
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/MainActivitytextViewResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/MainActivitytextViewPassGenerated"
        android:layout_toStartOf="@+id/MainActivitytextViewPassGenerated"
        android:layout_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/MainActivitytextViewPassGenerated"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/MainActivityeditTextAppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="AppName"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/MainActivitytextViewGenerate"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/MainActivitytextViewShortcuts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="12"
        android:layout_row="0"
        android:text="Shortcuts"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_below="@+id/MainActivitytextViewShortcuts"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MainActivitytextViewShortcuts" />

</android.support.constraint.ConstraintLayout>
